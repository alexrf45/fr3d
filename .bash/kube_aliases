# from file
alias kaf='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest apply -f'
alias kcf='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest create -f'
alias kdf='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest delete -f'
alias kef='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest edit -f'
alias kdsf='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest describe -f'
alias kgf='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest get -f'

alias kdsns='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest describe namespaces'

# Nodes
alias kdsn='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest describe nodes'
alias ken='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest edit nodes'
alias kgn='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest get nodes'
alias kgny='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest get nodes -o yaml'
alias ktn='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest top nodes'

#pods
