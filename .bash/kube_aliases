#kubernetes

alias kubectl='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest @'

alias k='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest'


alias k9s='docker run --rm -it -v ~/.kube/config:/root/.kube/config quay.io/derailed/k9s'

alias kd='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest delete'
alias kg='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest get'
alias kl='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest logs'
alias klf='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest logs -f'
# certificatesigningrequests
alias kgcsr='docker run --rm --name kubectl -v $HOME/.kube:/.kube bitnami/kubectl:latest get certificatesigningrequests'

# clusterrolebindings
